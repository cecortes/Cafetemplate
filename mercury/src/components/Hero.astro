---
import { string } from 'astro:schema';
import IconButton from './IconButton.astro';

interface Props {
  img: string;
}

const { img } = Astro.props;


const texts= {
  title: "Rentoy",
  subtitle: "Un rincón para disfrutar del mejor café y comida casera en Puebla.",
  copy1: "Ubicado en el corazón del Centro Histórico de Puebla, Rentoy Café Restaurante es mucho más que un lugar para tomar café: es un refugio cultural y gastronómico que invita a detener el tiempo.",
  copy2: "Justo al lado del majestuoso Teatro Principal y enmarcado por el encanto bohemio del Barrio del Artista, Rentoy se convierte en una parada obligada para locales y visitantes que buscan una experiencia única.",
}
---

<section>

  <!-- Background Image -->
  <div class="hero" style={{ backgroundImage: `url(${img})` }} aria-hidden="true"></div>

  <div class="main-container">

    <div class="titles-container glass-title w-[90%]">
      <h1 class="title">{texts.title}</h1>
      <h2 class="subtitle">{texts.subtitle}</h2>
    </div>
  
    <div class="content-container flex flex-column md:flex-row md:justify-between md:mt-4 md:w-[90%] md:gap-4 w-[90%]">
      <article class="glass md:w-[55%]">
        <p class="copy">
          {texts.copy1}
        </p>
        <br>
        <p class="copy">
          {texts.copy2}
        </p>
      </article>

      <div class="container hidden md:w-[45%] mb:block"></div>
    </div>

    <IconButton class="mt-4 text-slate-900" icon="next" aria-label="Next section" />

  </div>

</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');

  @import "tailwindcss";
  .hero {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -1;
    pointer-events: none;
  }
  
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: relative;
  }
  .hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(58, 58, 58, 0.1);;
  }
  .main-container {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    height: 100vh;
  }

  .titles-container {
    margin: 0 auto;
    padding: 0 2rem;
    max-width: 95%;
    margin-bottom: 2rem;
    @apply mt-4 rounded-xl p-4;
  }

  .title {
    font-family: 'Montserrat', serif;
    font-optical-sizing: auto;
    font-weight: 500;
    font-style: normal;
    text-shadow: 5px 2px 10px rgb(0, 0, 0);
    color: #f4f1f1;
    @apply mb-4 text-4xl md:text-7xl;
  }

  .subtitle {
    font-family: 'Montserrat', serif;
    font-optical-sizing: auto;
    font-weight: 500;
    font-style: italic;
    text-shadow: 5px 2px 10px rgb(0, 0, 0);
    color: #eae7b6;
    @apply m-2 mb-6 text-2xl md:text-3xl;
  }

  .copy {
    @apply text-slate-900 text-justify text-pretty  lg:text-2xl;
  }

  .glass {
    /* From https://css.glass */
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 1.5rem;
  }

  .glass-title {
    /* From https://css.glass */
    background: rgba(223, 157, 24, 0.2);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(223, 157, 24, 0.3);
    padding: 0 2rem;
    margin-top: 2rem;
  }

</style>